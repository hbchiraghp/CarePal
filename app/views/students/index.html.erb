<div class="form-container">
  <h2> Students Listing <span></span> </h2>
  <%= link_to 'Add New Student', new_student_path, :class => "submit pull-right" %>
  <div class="clearfix"></div>

  <div class="inner-action">
    <div class="row">
      <div class="col-sm-7">&nbsp;</div>
      <div class="col-sm-2">        
      </div>
    </div>
   </div>
   
  <div class="clearfix"></div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="user-listing">
            <table class="responsive">
                <tbody><tr>
                    <!-- <th width="10px">
                        <div class="custom-chk">
                            <label class=""><input name="Gorilla" type="checkbox"></label>
                        </div>
                    </th> -->
                    <th>Student&nbsp;Number</th>
                    <th>Username</th>
                    <th>First&nbsp;Name</th>
                    <th>Last&nbsp;Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>DOB</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Status</th>
                    <th colspan="3">Actions</th>
                </tr>
                <% @students.each do |student| %>
                  <tr>
                    <!-- <td>&nbsp;</td> -->
                    <td><%= student.student_number %></td>
                    <td><%= student.username %></td>
                    <td><%= student.first_name %></td>
                    <td><%= student.last_name %></td>
                    <td><%= student.email %></td>
                    <td><%= student.gender %></td>
                    <td><%= student.dob %></td>
                    <td><%= student.city %></td>
                    <td><%= student.country %></td>
                    <td><%= student.status %></td>
                    <td><%= link_to 'Show', student_path(student) %></td>
                    <td><%= link_to 'Edit', edit_student_path(student) %></td>
                    <td><%= link_to 'Delete', student_path(student),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>               
            </tbody>
            </table>
            <%= will_paginate @students %>
